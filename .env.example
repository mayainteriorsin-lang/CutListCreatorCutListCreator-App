# ===========================================
# CutListCreator Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Database
# ===========================================
DATABASE_URL=postgresql://user:password@host:5432/database

# ===========================================
# REQUIRED - Authentication
# ===========================================
# JWT Secret - MUST be changed in production! Use a strong random string (32+ chars)
JWT_SECRET=dev-secret-change-in-production-use-strong-random-string

# ===========================================
# OPTIONAL - Server Configuration
# ===========================================
NODE_ENV=production
PORT=5000

# ===========================================
# OPTIONAL - Database SSL
# ===========================================
# DB_SSL=true
# DB_SSL_REJECT_UNAUTHORIZED=false

# ===========================================
# OPTIONAL - Redis (for caching/queues)
# ===========================================
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379

# ===========================================
# OPTIONAL - AI Features
# ===========================================
# OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# OPTIONAL - Storage
# ===========================================
# PRIVATE_OBJECT_DIR=/path/to/storage

# ===========================================
# DEVELOPMENT ONLY - Auth Bypass
# ===========================================
# VITE_BYPASS_AUTH=true
# BYPASS_AUTH=true
