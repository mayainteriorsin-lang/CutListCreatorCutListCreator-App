# ===========================================
# CutListCreator Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED - Database
# ===========================================
DATABASE_URL=postgresql://user:password@host:5432/database

# ===========================================
# REQUIRED - Authentication (PRODUCTION)
# ===========================================
# JWT Secret - MUST be at least 32 characters in production!
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_32_PLUS_CHARACTER_SECRET_KEY

# ===========================================
# Server Configuration
# ===========================================
NODE_ENV=production
PORT=5000

# ===========================================
# SECURITY - Auth Bypass
# ===========================================
# WARNING: These MUST be false (or not set) in production!
# Setting to true will cause the app to crash in production mode.
# BYPASS_AUTH=false
# VITE_BYPASS_AUTH=false

# ===========================================
# OPTIONAL - Database SSL
# ===========================================
# DB_SSL=true
# DB_SSL_REJECT_UNAUTHORIZED=false

# ===========================================
# OPTIONAL - Redis (for caching/queues)
# ===========================================
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379

# ===========================================
# OPTIONAL - AI Features
# ===========================================
# OPENAI_API_KEY=sk-your-openai-api-key

# ===========================================
# OPTIONAL - Storage
# ===========================================
# PRIVATE_OBJECT_DIR=/path/to/storage
